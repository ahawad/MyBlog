<div class="ui left vertical inverted sidebar menu">
  <div class="header menu item">Awesome New Blog</div>

  {{#link-to 'blogs' class="menu item"}}
    <i class="browser icon"></i>
    Blogs
  {{/link-to}}

  {{#if session.isAuthenticated}}
    <a {{action 'invalidateSession'}} class="menu item">
      <i class="user icon"></i>
      Logout
    </a>
  {{else}}
    {{#link-to 'login' class="menu item"}}
      <i class="user icon"></i>
      Login
    {{/link-to}}
  {{/if}}

  {{#link-to 'about' class="menu item"}}
    <i class="info icon"></i>
    About Us
  {{/link-to}}
</div>

<div class="ui fixed sticky right attached button black launch" id="menu-button">
  <i class="content icon"></i><span class="text">Menu</span>
</div>
